        }

        nav a {
            color: #ffffff;
            text-decoration: none;
            margin: 0 5px;
            font-size: 0.8em;
            padding: 3px 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        nav a:hover {
            background-color: #00796b;
            color: #fff;
            border-radius: 5px;
        }

        main {
            padding: 20px;
        }

